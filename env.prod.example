# Production Environment Variables for Telegram Bot
# Copy this file to .env on your server and fill in the values

# Telegram Bot Tokens
BOT_TOKEN=your_main_bot_token_here
ORDER_BOT_TOKEN=your_order_bot_token_here

# Admin Configuration
ADMIN_USER_ID=your_telegram_user_id

# Payment Configuration
BINANCE_WALLET_TOKEN=your_binance_wallet_address
BINANCE_WALLET_ID=your_binance_id

# Webhook Configuration (optional)
USE_WEBHOOKS=false
WEBHOOK_URL=https://your-domain.com/webhook
WEBHOOK_PORT=8443
ORDER_WEBHOOK_URL=https://your-domain.com/order-webhook
ORDER_WEBHOOK_PORT=8444

# Database Configuration (usually no need to change)
MONGODB_URL=mongodb://admin:password123@mongodb:27017/telegram_bot?authSource=admin
